generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Url {
  id          Int      @id @default(autoincrement())
  shortCode   String   @unique
  originalUrl String
  clicks      Int      @default(0)
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  @@index([createdAt])
}
